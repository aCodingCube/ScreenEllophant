{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Screen Ellophant",
  "version": "0.1.0",
  "identifier": "com.lorenz.screen-ellophant",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Screen Ellophant",
        "label": "starting-window",
        "url": "StartingWindow/index.html",
        "visible": true,
        "maximized": false,
        "width": 600,
        "height": 300,
        "theme": "Dark",
        "decorations": false,
        "center": true
      },
      {
        "label": "main",
        "title": "Screen Ellophant",
        "visible": false,
        "width": 800,
        "height": 600,
        "url": "MainWindow/index.html",
        "maximized": true,
        "theme": "Dark",
        "dragDropEnabled": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
